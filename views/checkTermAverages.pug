doctype html
html
  include partials/header.pug
  body
    .container-fluid#main
      include partials/nav.pug
      .row
        .col-sm-12
          .card#content-container
            .card-body#content-body
              .col-sm-12
                h3 Term Averages Above Four
                p This list contains all students scoring above four based on their average this term (week 5 and 9).
              .col-sm-12#scores
                table.table.table-striped.scores-table
                  thead
                    tr
                      th(scope='col') #
                      th(scope='col') Name
                      th.text-center(scope='col') Year
                      th.text-center(scope='col') Current Average
                  tbody
                    each val, index in students
                      tr
                        td= index+1
                        td
                          a(href='/check/single?name='+val.name)= val.name
                        td.text-center= val.year
                        td.text-center= val.average
    include partials/footer.pug
