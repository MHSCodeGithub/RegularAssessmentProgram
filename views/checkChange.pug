doctype html
html
  include partials/header.pug
  body
    .container-fluid#main
      include partials/nav.pug
      .row
        .col-sm-12
          .card#content-container
            .card-body#content-body
              .col-sm-12
                h3 By Biggest Change
                .card#classes-card
                  .card-header#classes-header
                    ul#subject-tabs.nav.nav-pills.nav-fill(role='tablist')
                      li.nav-item
                        a.nav-link.active#tab-positive(data-toggle='pill', href='#tab-container-1', role='tab', aria-controls='tab-container-1', aria-selected='true') Positive Change
                      li.nav-item
                        a.nav-link#tab-negative(data-toggle='pill', href='#tab-container-2', role='tab', aria-controls='tab-container-2', aria-selected='false') Negative Change
                  .card-body#classes-body
                    .tab-content#tab-container
                      .tab-pane.fade.show.active#tab-container-1(role='tabpanel', aria-labelledby='tab-positive')
                        .row
                          .col-sm-12
                            table.table.table-striped.scores-table
                              thead
                                tr
                                  th(scope='col') #
                                  th(scope='col') Name
                                  th.text-center(scope='col') Year
                                  th.text-center(scope='col') Long-Term Average
                                  th.text-center(scope='col') Current Average
                                  th.text-center(scope='col') Change
                              tbody
                                each val, index in students.goodStudents
                                  tr
                                    td= index+1
                                    td
                                      a(href='/check/single?name='+val.name)= val.name
                                    td.text-center= val.grade
                                    td.text-center= val.longTermAverage
                                    td.text-center= val.currentAverage
                                    td.text-center= val.change
                      .tab-pane.fade#tab-container-2(role='tabpanel', aria-labelledby='tab-negative')
                        .row
                          .col-sm-12
                            table.table.table-striped.scores-table
                              thead
                                tr
                                  th(scope='col') #
                                  th(scope='col') Name
                                  th.text-center(scope='col') Year
                                  th.text-center(scope='col') Long-Term Average
                                  th.text-center(scope='col') Current Average
                                  th.text-center(scope='col') Change
                              tbody
                                each val, index in students.badStudents
                                  tr
                                    td= index+1
                                    td
                                      a(href='/check/single?name='+val.name)= val.name
                                    td.text-center= val.grade
                                    td.text-center= val.longTermAverage
                                    td.text-center= val.currentAverage
                                    td.text-center= val.change
    include partials/footer.pug
