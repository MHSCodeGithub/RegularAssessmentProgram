- var page = "editTeachers"
doctype html
html
  include partials/header.pug
  body
    .container-fluid#main
      include partials/nav.pug
      .row
        .col-sm-12
          .card#content-container
            .card-body#content-body
              .col-sm-12
                h3 Edit Teachers
                p Browse, delete, rename and update access levels for teachers.
                .card#classes-card
                  .card-header#classes-header
                    ul#subject-tabs.nav.nav-pills.nav-fill(role='tablist')
                      li.nav-item
                        a.nav-link.active#tab-edit(data-toggle='pill', href='#tab-container-1', role='tab', aria-controls='tab-container-1', aria-selected='true') Edit
                      li.nav-item
                        a.nav-link#tab-import(data-toggle='pill', href='#tab-container-2', role='tab', aria-controls='tab-container-2', aria-selected='false') Import
                      li.nav-item
                        a.nav-link#tab-export(data-toggle='pill', href='#tab-container-3', role='tab', aria-controls='tab-container-3', aria-selected='false') Export
                  .card-body#classes-body
                    .tab-content#tab-container
                      .tab-pane.fade.show.active#tab-container-1(role='tabpanel', aria-labelledby='tab-edit')                        
                        .row#addTeacher
                          .col-lg-8.col-md-6.col-sm-12.col-xs-12
                            input#teacherName.form-control.form-control-lg(type='text', placeholder='Teacher Full Name')
                          .col-lg-4.col-md-6.col-sm-12.col-xs-12
                            button.btn.btn-primary.btn-lg(style='width: 100%', onclick='addTeacher();') Add Teacher
                        #display
                      .tab-pane.fade#tab-container-2(role='tabpanel', aria-labelledby='tab-import')
                        .row
                          .col-sm-12
                            form#upload-form(action="/uploadTeachers", autocomplete="off", method="POST", encType="multipart/form-data")
                              .row
                                .col-md-8.form-group
                                  label(for='fileUpload') Import JSON File of Teachers (as generated by 'Export'):
                                  input.browse-file.form-control-file.form-control-lg(type='file', id='fileUpload', name='fileUpload', placeholder="Browse File", required)
                                .col-md-4.form-group
                                  div(style='margin-top: 32px;')
                                  button.btn.btn-primary.btn-lg(type='submit', style='width: 100%;') Upload
                      .tab-pane.fade#tab-container-3(role='tabpanel', aria-labelledby='tab-export')
                        .row
                          .col-sm-12
                            p Export JSON File of Teachers (as a backup):
                            button#exportTeachers.btn.btn-primary.btn-lg(type='submit', style='width: 100%;') Export
                .row
                  .col-sm-12
                    if success_msg != ""
                      div.alert.alert-success.text-center(role="alert", style='margin-top: 20px;') #{success_msg}
    include partials/footer.pug
